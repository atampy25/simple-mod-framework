{
    "compilerOptions": {
        "outDir": "./compiled",
        "allowJs": true,
        "target": "ES2019",
        "module": "CommonJS",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "importsNotUsedAsValues": "error",
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "noEmitHelpers": true,
        "importHelpers": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ]
}